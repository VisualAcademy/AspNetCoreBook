@model List<Idea>

<h1>아이디어 관리자</h1>

<ul>
    @foreach (var idea in Model)
    {
        <li>
            @idea.Id, @idea.Note
        </li>
    }
</ul>

<form action="/Idea/Index" method="post">
    <input type="text" name="Note" id="Note" class="form-control" />
    <input type="submit" value="저장" class="btn btn-primary" />
</form>

