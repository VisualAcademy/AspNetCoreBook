@{
    Layout = null;
}
@{
    ViewBag.Title = "회원가입";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<style>
    .control-label {
        font-size: 12px;
    }
    /* jQuery Validation 에러 메시지에 대한 스타일 정의 */
    .error {
        color: red;
        font-size: 11px;
        font-weight: normal;
    }
</style>


<script src="~/Scripts/jquery-2.1.3.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>

<form action="/Account/Register/" method="post">
    
<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>회원가입</h1>
        </div>
        <div class="col-md-offset-2 col-md-8">
            <div class="well">
                회원가입 관련된 정보를 입력하십시오.
            </div>
            <div class="error">
                <span></span>
            </div>
        </div>
        <div class="col-md-offset-2 col-md-8">



            <div class="form-horizontal" role="form">

                <div class="form-group">
                    <label class="col-sm-2 control-label" for="txtDomainID">아이디</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="txtDomainID" name="txtDomainID" placeholder="아이디" required>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label" for="txtName">이름</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="txtName" name="txtName" placeholder="이름" required>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label" for="txtPassword">비밀번호</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="txtPassword" name="txtPassword" placeholder="비밀번호">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label" for="txtPasswordConfirm">비밀번호 확인</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="txtPasswordConfirm" name="txtPasswordConfirm" placeholder="비밀번호 확인">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label" for="txtEmail">E-mail</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="txtEmail" name="txtEmail" placeholder="E-mail">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label" for="txtPhoneNumber">휴대폰번호</label>
                    <div class="col-sm-10">

                        <input type="text" class="form-control" id="txtPhoneNumber" placeholder="휴대폰번호">
                        <select class="form-control" id="ddlPhoneNumber" style="width:100px;display:inline-block;">
                            <option>010</option>
                            <option>019</option>
                            <option>018</option>
                            <option>017</option>
                            <option>016</option>
                            <option>011</option>
                        </select>
                        -
                        <input type="text" class="form-control" id="txtFirstNumber" name="txtFirstNumber" style="width:90px;display:inline-block;" />
                        -
                        <input type="text" class="form-control" id="txtSecondNumber" name="txtSecondNumber" style="width:90px;display:inline-block;" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label" for="lstYear">생년월일</label>
                    <div class="col-sm-10">
                        <select class="form-control" id="lstYear" style="width:100px;display:inline-block;">
                            <option>년(YYYY)</option>
                        </select>

                        <select class="form-control" id="lstMonth" style="width:100px;display:inline-block;">
                            <option>월(MM)</option>
                        </select>

                        <select class="form-control" id="lstDay" style="width:100px;display:inline-block;">
                            <option>일(DD)</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label" for="txtAddress">주소</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="txtAddress" placeholder="주소">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label" for="optGender">성별</label>
                    <div class="col-sm-10">
                        <div class="radio-inline">
                            <label>
                                <input type="radio"> 남자
                            </label>
                        </div>
                        <div class="radio-inline">
                            <label>
                                <input type="radio"> 여자
                            </label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label" for="lstCountry">국가</label>
                    <div class="col-sm-10">
                        <select class="form-control">
                            <option>국가선택</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label" for="txtDescription">소개</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="txtDescription" placeholder="소개">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label" for="txtSns">SNS</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="txtSns" name="txtSns" placeholder="SNS">
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-sm-2 control-label" for="form-group-input">수신여부</label>
                    <div class="col-sm-10">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox"> E-Mail 수신 동의
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox"> 문자메시지 수신 동의
                            </label>
                        </div>
                    </div>
                </div>

                <hr />


                <div class="form-group">

                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label" for="txtAgreement">약관</label>
                    <div class="col-sm-10">
                        <label class="control-label" for="txtAgreement">이용 약관 및 개인정보 취급방침</label>
                        <textarea rows="4" class="form-control" id="txtAgreement"></textarea>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox"> 위 약관과 개인정보 취급방침에 동의합니다.
                            </label>
                        </div>
                        <div>
                            회원 이용 약관과 개인정보 취급방침에 동의하셔야 회원가입을 하실 수 있습니다.
                        </div>
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-sm-12 text-center">
                        <input type="submit" class="btn btn-default btn-lg" value="사용자 등록" />
                    </div>
                </div>
            </div>



        </div>
    </div>
</div>

</form>

<script>

        // jQuery.validator.addMethod()로 새로운 규칙 추가
        jQuery.validator.addMethod("domain", function (value, element) {
            return this.optional(element) || /^http/.test(value);
        }, "http 단어를 포함한 정확한 URL을 입력하세요.");

        // jquery.validate.js를 포함했을 때 validate() 메서드 사용 가능
        $("form").validate({

            rules: {
                txtDomainID: {
                    required: true,
                    minlength: 3,
                    maxlength: 15
                },
                txtName: {
                    required: true
                },
                txtPassword: {
                    required: true
                },
                txtPasswordConfirm: {
                    required: true
                },
                txtEmail: {
                    required: true,
                    email: true
                },
                txtFirstNumber: {
                    digits: true
                },
                txtSecondNumber: {
                    digits: true
                },
                txtSns: {
                    domain: true
                }
            },

            messages: {
                txtDomainID: {
                    required: "아이디를 입력하시오.",
                    minlength: "{0}자 이상 입력하시오.",
                    maxlength: "{0}자 이하로 입력하시오."
                },
                txtName: {
                    required: "이름을 입력하시오."
                },
                txtPassword: {
                    required: "암호를 입력하시오."
                },
                txtPasswordConfirm: {
                    required: "암호 확인을 입력하시오."
                },
                txtEmail: {
                    required: "이메일은 필수 항목입니다.",
                    email: "정확한 이메일을 입력하시오."
                },
                txtFirstNumber: {
                    digits: "숫자만 입력 가능합니다."
                },
                txtSecondNumber: {
                    digits: "숫자만 입력 가능합니다."
                },
                txtSns: {
                    domain: "http 또는 https를 포함한 URL을 입력하시오."
                }
            },

            highlight: function (element, errorClass) {
                $(element).closest('.form-group').addClass("has-error");
            },

            unhighlight: function (element, errorClass) {
                $(element).closest('.form-group').removeClass("has-error");
            },

            errorPlacement: function (error, element) {
                if (element.attr('id') == 'txtFirstNumber' || element.attr('id') == 'txtSecondNumber') {
                    element.closest('.form-group').children(".col-sm-10").prepend(error);
                }
                else {
                    error.insertAfter(element);
                }
            },

            submitHandler: function (form) {
                // 폼이 전송되기전에 무언가 처리: Ajax 처리
                // alert("전송되기 전...");

                form.submit();
            },

            invalidHandler: function (event, validator) {
                // 'this' refers to the form
                var errors = validator.numberOfInvalids();
                if (errors) {
                    var message = errors == 1
                      ? '잘못된 항목이 1개 있습니다.'
                      : '잘못된 항목이 ' + errors + '개 있습니다.';
                    $("div.error span").html(message);
                    $("div.error").show();
                } else {
                    $("div.error").hide();
                }
            }

        });
</script>




